.date-box {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: fixed;
    box-sizing: border-box;
    padding-left: 20rpx;
}

.week-box {
    width: 100%;
    display: flex;
    flex-direction: row;
}

.week-items {
    text-align: center;
    font-size: 40rpx;
}

.day-box {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
}

.day-items {
    text-align: center;
    font-size: 40rpx;
}

.dateOn {
    border-radius: 50%;
    text-align: center;
    font-size: 40rpx;
    font-weight: 600;
}